<h1>Edit a previous recipe</h1>
  <form action="/recipes/<%= @recipe.id %>" method="POST">

  <input type="hidden" name="_method" id="hidden" value="PATCH">

  <label for="title">Recipe Title:</label>
  <input type="text" name="title" value="<%= @recipe.title %>">

  <label for="content">Recipe Instructions:</label>
  <input type="textarea" name="content" value="<%= @recipe.content %>">

  <label for="ingredients">Recipe Ingredients:</label>
  <input type="textarea" name="ingredients" value="<%= @recipe.ingredients %>">

  <label for="cook_time">Cook Time:</label>
  <input type="text" name="cook_time" value="<%= @recipe.cook_time %>">

  <label for="serving_size">Serving Size:</label>
  <input type="text" name="serving_size" value="<%= @recipe.serving_size %>">


  <input type="submit" name="submit" value="Update">
        </form>
